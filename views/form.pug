extends layout

block content
    form(action="/form" method="post" style="display:flex; flex-direction:column")
        label Name 
            input(type="text" placeholder="name" name="name" required style="margin: 10px 0")
        label Genre
            select(name="genres")
                option(lang="es" value="Acción") Action
                option(value="Aventuras") Adventure
                option(value="Comedia") Comedy
                option(value="Drama") Drama
                option(value="Romance") Romance
                option(value="Slice of Life") Slice of Life
                option(lang="es" value="Fantasía") Fantasy
                option(value="Suspenso") Suspense
                option(lang="es" value="Ciencia Ficción") Science Fiction 
        label Sinopsis
            input(type="textarea" placeholder="sinopsis" name="sinopsis" required style="width: 400px; height: 250px;") 
        label Year
            input(type="text" placeholder="year" name="year" required style="margin: 10px 0") 
        label Episodes
            input(type="text" placeholder="episodes" name="episodes" required style="margin: 10px 0") 
        label Image 
            input(type="text" name="imageLink" placeholder="Image link" required)
        
        input(type="submit" value="submit")